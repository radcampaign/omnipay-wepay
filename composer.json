{
    "name": "radcampaign/omnipay-wepay",
    "description": "WePay driver for the Omnipay v3 payment processing library",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Joshua Diamond",
            "email": "joshua@radcampaign.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "omnipay/common": "^3.0"
    },
    "autoload": {
        "psr-4": { "Omnipay\\WePay\\" : "src/" }
    },
    "require-dev": {
        "psy/psysh": "^0.9.9",
        "vlucas/phpdotenv": "^3.3",
        "omnipay/tests": "^3.1",
        "fzaninotto/faker": "^1.8",
        "phpro/grumphp": "^0.15.0",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 src/",
        "fix-style": "phpcbf -p --standard=PSR2 src/"
    },
    "repositories": [
        {
            "type": "path",
            "url": "../omnipay-common"
        },
        {
            "type": "path",
            "url": "../omnipay-tests"
        }
    ]
}
